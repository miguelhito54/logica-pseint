Algoritmo Punto_1	
	
	Imprimir "Imprimir los numeros del 1 al 100"
	Imprimir "---------------------------------"
	
	Imprimir " Con Para "
	Para i <- 1 Hasta 100
		Imprimir i
	FinPara
	
	Imprimir " Con Mientras "
	i <- 0 
	Mientras i < 100 Hacer
		i = i + 1
		Imprimir i
	FinMientras
	
	Imprimir " Con Repetir "
	i <- 0
	Repetir
		i = i + 1
		Imprimir i
	Hasta Que i >= 100
	Imprimir ""
	
FinAlgoritmo
